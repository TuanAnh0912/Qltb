@section scripts{
    <script src="~/assets/javascript/hanhnd_1.js"></script>
    <script>
        function Delete(PhieuKiemKeId) {
            $('#delete-modal').modal('show');
            $("#delete-phieu-kiem-ke-btn").click(function () {
                DeletePhieuGhiHongMatBi(PhieuKiemKeId);
            });
        }

        function DeletePhieuGhiHongMatBi(PhieuKiemKeId) {
            console.log(PhieuKiemKeId)
            $.ajax({
                url: "/quan-ly-thiet-bi/xoa-thong-tin-phieu-kiem-ke",
                data: {
                    PhieuKiemKeId: PhieuKiemKeId
                },
                type: "post",
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                }
            });
        }

        function Search() {
            let queryParams = $('#search-phieu-kiem-ke-form').serialize();
            location.replace("/quan-ly-thiet-bi/danh-sach-phieu-kiem-ke?" + queryParams);
        }

        function GetKhoPhongs(item) {
            return $.ajax({
                url: "/tu-dien/danh-sach-kho-phong",
                type: "get",
                success: function (response) {
                    item.html('').select2({ data: [{ id: '', text: '' }] });
                    item.select2({
                        data: response.map(ele => {
                            return { ...ele, id: ele.KhoPhongId, text: ele.TenKhoPhong ? ele.TenKhoPhong : '' }
                        }),
                        language: {
                            noResults: function () {
                                return "Không có dữ liệu";
                            }
                        },
                    })
                },
                error: function (xhr) {
                    //Do Something to handle error
                }
            });

        }

        $(document).ready(function () {
            if ('@(SuccessNotification)') {
                toastr["success"]('@(SuccessNotification)')
            }
            else if ('@(WarningNotification)') {
                toastr["warning"]('@(WarningNotification)')
            }

            GetKhoPhongs($("#search-phieu-kiem-ke-form select[name=KhoPhongId]")).then(res => {
                let khoPhongIdQueryParam = '@(KhoPhongIdQueryParam)';
                if (khoPhongIdQueryParam) {
                    console.log(khoPhongIdQueryParam)
                    $('#search-phieu-kiem-ke-form select[name=KhoPhongId]').val(parseInt(khoPhongIdQueryParam)).trigger("change");
                }
            })

            $("#search-phieu-kiem-ke-form").submit(function (e) {
                e.preventDefault();
            })
        })
    </script>
}