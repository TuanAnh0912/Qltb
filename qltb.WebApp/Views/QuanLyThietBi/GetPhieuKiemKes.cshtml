                    <div class="table-responsive" style="min-width: 1000px">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Số phiếu</th>
                                    <th>Ngày lập</th>
                                    <th>Ngày kiểm kê</th>
                                    <th>Ghi chú</th>
                                    <th>Người tạo</th>
                                    <th class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var phieuKiemKeResVM in (List<PhieuKiemKeResVM>)Model.Objects)
                                    {
                                        <tr>
                                            <td>@phieuKiemKeResVM.STT</td>
                                            <td><code>@phieuKiemKeResVM.SoPhieu</code></td>
                                            <td>@(phieuKiemKeResVM.NgayLap.HasValue ? phieuKiemKeResVM.NgayLap.Value.ToString("dd/MM/yyyy") : "")</td>
                                            <td>@(phieuKiemKeResVM.NgayKiemKe.HasValue ? phieuKiemKeResVM.NgayKiemKe.Value.ToString("dd/MM/yyyy") : "")</td>
                                            <td>@phieuKiemKeResVM.GhiChu</td>
                                            <td>@phieuKiemKeResVM.HoTen</td>
                                            <td>
                                                <a class="btn btn-sm btn-outline-info" href="/quan-ly-thiet-bi/thong-tin-phieu-kiem-ke?phieuKiemKeId=@(phieuKiemKeResVM.PhieuKiemKeId)"><i class="fas fa-pencil"></i></a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="Delete('@(phieuKiemKeResVM.PhieuKiemKeId)')"><i class="fas fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
