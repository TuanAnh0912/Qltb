@section scripts{
    <script src="~/assets/javascript/hanhnd_1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script>
        let thietBiDaChons = [];
        let taiLieuDinhKems = [];

        function AddPhieuGhiGiamThietBi() {
            let data = { ChiTietThietBiGiams: thietBiDaChons, TaiLieuDinhKems: taiLieuDinhKems }
            $("#add-phieu-ghi-giam-thiet-bi-form").serializeArray().forEach(ele => {
                data[ele.name] = ele.value
            })
            if (!data.SoPhieu) {
                toastr["warning"]('Chưa nhập số phiếu');
            }
            else if (!data.NgayLap) {
                toastr["warning"]('Chưa nhập ngày lập');
            }
            else if (!data.ChiTietThietBiGiams || data.ChiTietThietBiGiams.length == 0) {
                toastr["warning"]('Chưa chọn thiết bị');
            }
            else {
                $.ajax({
                    url: "/quan-ly-thiet-bi/them-thong-tin-phieu-ghi-giam-thiet-bi",
                    type: "post",
                    data: data,
                    success: function (response) {
                        window.location.replace("/quan-ly-thiet-bi/danh-sach-phieu-ghi-giam-thiet-bi");
                    },
                    error: function (xhr) {
                        //Do Something to handle error
                    }
                });
            }

        }

        function OpenChonThietBi() {
            let t;
            $('#add-modal').modal('show');
            $("#search-chon-thiet-bi-form input").prop("disabled", true);
            $('#chon-thiet-bi-table').DataTable().clear().draw();;
            GetMonHocs($("#search-chon-thiet-bi-form select[name=MonHocId]"));

            $('#search-chon-thiet-bi-form select[name=MonHocId]').on('select2:select', function (e) {
                if (e.params.data) {
                    if (e.params.data.selected) {
                        $("#search-chon-thiet-bi-form input").val('');
                        $("#search-chon-thiet-bi-form input").prop("disabled", false);
                        if (t) {
                            clearTimeout(t);
                        }
                        t = setTimeout(function () {
                            GetDanhSachChonThietBi();
                        }, 400);
                    }
                }
            });

            $('#search-chon-thiet-bi-form select[name=LoaiId]').on('select2:select', function (e) {
                if ($('#search-chon-thiet-bi-form select[name=MonHocId]').select2('data')[0].id) {
                    if (t) {
                        clearTimeout(t);
                    }
                    t = setTimeout(function () {
                        GetDanhSachChonThietBi();
                    }, 400);
                }
            });

            $('#search-chon-thiet-bi-form select[name=MonHocId]').on('select2:clear', function (e) {
                $("#search-chon-thiet-bi-form input").val('');
                $("#search-chon-thiet-bi-form input").prop("disabled", true);
            });

            $("#search-chon-thiet-bi-form input").unbind();
            $("#search-chon-thiet-bi-form input").keyup(function () {
                if (t) {
                    clearTimeout(t);
                }
                t = setTimeout(function () {
                    GetDanhSachChonThietBi();
                }, 400);
            })
        }

        function GetDanhSachChonThietBi() {
            let dataSearch = {};

            $('#search-chon-thiet-bi-form').serializeArray().forEach(ele => {
                dataSearch[ele.name] = ele.value
            })

            $.ajax({
                url: "/quan-ly-thiet-bi/danh-sach-thiet-bi-trong-kho-va-thiet-bi-hong-mat",
                type: "get",
                data: dataSearch,
                success: function (response) {
                    let data = [];
                    let i = 0;
                    response.forEach(ele => {
                        let item = [];
                        item.push(ele["MaThietBi"] ? ele["MaThietBi"] : '');
                        item.push(ele["TenThietBi"] ? ele["TenThietBi"] : '');
                        item.push(ele["TenLoaiThietBi"] ? ele["TenLoaiThietBi"] : '');
                        item.push(ele["TenKhoPhong"] ? ele["TenKhoPhong"] : '');
                        if ($('#search-chon-thiet-bi-form select[name=LoaiId]').select2('data')[0].id === "2") {
                            item.push(ele["SoLuongMat"] ? ele["SoLuongMat"] : '0');
                        }
                        else if ($('#search-chon-thiet-bi-form select[name=LoaiId]').select2('data')[0].id === "3") {
                            item.push(ele["SoLuongHong"] ? ele["SoLuongHong"] : '0');
                        }
                        else if ($('#search-chon-thiet-bi-form select[name=LoaiId]').select2('data')[0].id === "1") {
                            item.push(ele["SoLuongConLai"] ? ele["SoLuongConLai"] : '0');
                        }
                        item.push(ele["TenDonViTinh"] ? ele["TenDonViTinh"] : '');
                        item.push(ele["LyDo"] ? ele["LyDo"] : '');
                        item.push(ele["SoPhieuGhiHongThietBi"] ? ele["SoPhieuGhiHongThietBi"] : '');
                        item.push(ele["SoPhieuGhiMatThietBi"] ? ele["SoPhieuGhiMatThietBi"] : '');
                        if (ele.PhieuGhiMatThietBiId) {
                            let currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === ele.ThietBiId.toString())
                                && (x.KhoPhongId.toString() === ele.KhoPhongId.toString())
                                && (x.PhieuGhiMatThietBiId === ele.PhieuGhiMatThietBiId))
                            if (currentChiTietThietBi) {
                                item.push('<button class="btn btn-sm btn-success">Đã chọn</button>')
                            }
                            else {
                                item.push('<button class="btn btn-sm btn-outline-primary" id="chonThietBi-' + i + '-btn">Chọn</button>')
                            }
                        }
                        else if (ele.PhieuGhiHongThietBiId) {
                            let currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === ele.ThietBiId.toString())
                                && (x.KhoPhongId.toString() === ele.KhoPhongId.toString())
                                && (x.PhieuGhiHongThietBiId === ele.PhieuGhiHongThietBiId))
                            if (currentChiTietThietBi) {
                                item.push('<button class="btn btn-sm btn-success">Đã chọn</button>')
                            }
                            else {
                                item.push('<button class="btn btn-sm btn-outline-primary" id="chonThietBi-' + i + '-btn">Chọn</button>')
                            }
                        }
                        else {
                            let currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === ele.ThietBiId.toString())
                                && (x.KhoPhongId.toString() === ele.KhoPhongId.toString())
                                && (!x.PhieuGhiMatThietBiId) && (!x.PhieuGhiHongThietBiId));
                            if (currentChiTietThietBi) {
                                item.push('<button class="btn btn-sm btn-success">Đã chọn</button>')
                            }
                            else {
                                item.push('<button class="btn btn-sm btn-outline-primary" id="chonThietBi-' + i + '-btn">Chọn</button>')
                            }
                        }
                        i++;
                        data.push(item)

                    })
                    let table = $('#chon-thiet-bi-table').DataTable();
                    table.clear();
                    table.rows.add(data)
                    table.draw();

                    i = 0;
                    response.forEach(ele => {
                        $("#chonThietBi-" + i + "-btn").unbind();
                        $("#chonThietBi-" + i++ + "-btn").click(() => {
                            ChonThietBi(ele)
                        })
                    })
                },
                error: function (xhr) {
                    //Do Something to handle error
                }
            });
        }

        function ChonThietBi(chiTietThietBiDaChon) {
            let currentChiTietThietBi;
            if (chiTietThietBiDaChon.PhieuGhiMatThietBiId) {
                currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === chiTietThietBiDaChon.ThietBiId.toString())
                    && (x.KhoPhongId.toString() === chiTietThietBiDaChon.KhoPhongId.toString())
                    && (x.PhieuGhiMatThietBiId === chiTietThietBiDaChon.PhieuGhiMatThietBiId));
            }
            else if (chiTietThietBiDaChon.PhieuGhiHongThietBiId) {
                currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === chiTietThietBiDaChon.ThietBiId.toString())
                    && (x.KhoPhongId.toString() === chiTietThietBiDaChon.KhoPhongId.toString())
                    && (x.PhieuGhiHongThietBiId === chiTietThietBiDaChon.PhieuGhiHongThietBiId));
            }
            else {
                currentChiTietThietBi = thietBiDaChons.find(x => (x.ThietBiId.toString() === chiTietThietBiDaChon.ThietBiId.toString())
                    && (x.KhoPhongId.toString() === chiTietThietBiDaChon.KhoPhongId.toString())
                    && (!x.PhieuGhiMatThietBiId) && (!x.PhieuGhiHongThietBiId));
            }

            if (!currentChiTietThietBi) {
                $.ajax({
                    url: "/quan-ly-thiet-bi/thong-tin-thiet-bi-hong-mat-trong-kho",
                    type: "get",
                    data: {
                        thietBiId: chiTietThietBiDaChon.ThietBiId,
                        khoPhongId: chiTietThietBiDaChon.KhoPhongId,
                        phieuGhiMatThietBiId: chiTietThietBiDaChon.PhieuGhiMatThietBiId ? chiTietThietBiDaChon.PhieuGhiMatThietBiId : '',
                        phieuGhiHongThietBiId: chiTietThietBiDaChon.PhieuGhiHongThietBiId ? chiTietThietBiDaChon.PhieuGhiHongThietBiId : ''
                    },
                    success: function (response) {
                        let ele = response;
                        let data = [];
                        let item = [];
                        let id = (new Date()).valueOf();
                        let soLuongGiam = 0;
                        item.push(ele["MaThietBi"] ? ele["MaThietBi"] : '');
                        item.push(ele["TenThietBi"] ? ele["TenThietBi"] : '');
                        item.push(ele["TenLoaiThietBi"] ? ele["TenLoaiThietBi"] : '');
                        item.push(ele["TenKhoPhong"] ? ele["TenKhoPhong"] : '');
                        if (response.PhieuGhiMatThietBiId) {
                            soLuongGiam = ele["SoLuongMat"] ? ele["SoLuongMat"] : 0;
                        }
                        else if (response.PhieuGhiHongThietBiId) {
                            soLuongGiam = ele["SoLuongHong"] ? ele["SoLuongHong"] : 0;
                        }
                        else {
                            soLuongGiam = 0;
                        }

                        item.push(soLuongGiam);
                        item.push(ele["TenDonViTinh"] ? ele["TenDonViTinh"] : '');
                        item.push(ele["LyDo"] ? ele["LyDo"] : '');
                        item.push(ele["SoPhieuGhiMatThietBi"] ? ele["SoPhieuGhiMatThietBi"] : '');
                        item.push(ele["SoPhieuGhiHongThietBi"] ? ele["SoPhieuGhiHongThietBi"] : '');
                        item.push(`<button class="btn btn-sm btn-info" onClick="EditThietBiDaChon('` + id + `')">Sửa</button>
                                                                                    <button class="btn btn-sm btn-outline-danger" onClick="DeleteThietBiDaChon('` + id + `')">Xóa</button>`);
                        data.push(item)

                        let table = $('#thiet-bi-da-chon-table').DataTable();
                        table.rows.add(data)
                        table.draw();
                        thietBiDaChons.push({ ...response, id: id.toString(), SoLuongGiam: soLuongGiam })

                        $('#add-modal').modal('toggle');
                        toastr["success"]('Chọn thành công')
                    },
                    error: function (xhr) {
                        //Do Something to handle error
                    }
                });
            }
            else {
                toastr["warning"]('Đã chọn thiết bị này')
            }


        }

        function DeleteThietBiDaChon(thietBiDaChonId) {
            var index = thietBiDaChons.findIndex(ele => {
                return ele.id === thietBiDaChonId.trim();
            })
            if (index !== -1) thietBiDaChons.splice(index, 1);
            ReDrawThietBiDaChonTable();
            toastr["success"]('Xóa thành công');
        }

        function EditThietBiDaChon(thietBiDaChonId) {
            let thietBiDaChon = thietBiDaChons.find(x => x.id === thietBiDaChonId);
            if (thietBiDaChon) {
                $("#editModalLabel").html("Tên thiết bị: " + thietBiDaChon.TenThietBi)
                if (thietBiDaChon.PhieuGhiMatThietBiId) {
                    $("#edit-thiet-bi-da-chon input[name=SoLuongGiam]").prop('readonly', true)
                    $("#edit-thiet-bi-da-chon input[name=LyDo]").prop('readonly', true)
                    $("#edit-thiet-bi-da-chon input[name=SoLuong]").val(thietBiDaChon.SoLuongHongMat);
                    $("#edit-thiet-bi-da-chon input[name=SoPhieuGhiMat]").val(thietBiDaChon.SoPhieuGhiMatThietBi);
                }
                else if (thietBiDaChon.PhieuGhiHongThietBiId) {
                    $("#edit-thiet-bi-da-chon input[name=SoLuongGiam]").prop('readonly', true)
                    $("#edit-thiet-bi-da-chon input[name=LyDo]").prop('readonly', true)
                    $("#edit-thiet-bi-da-chon input[name=SoLuong]").val(thietBiDaChon.SoLuongHongMat);
                    $("#edit-thiet-bi-da-chon input[name=SoPhieuGhiHong]").val(thietBiDaChon.SoPhieuGhiHongThietBi);
                }
                else {
                    $("#edit-thiet-bi-da-chon input[name=SoLuongGiam]").prop('readonly', false)
                    $("#edit-thiet-bi-da-chon input[name=LyDo]").prop('readonly', false)
                    $("#edit-thiet-bi-da-chon input[name=SoLuong]").val(thietBiDaChon.SoLuongConLai);
                    $("#edit-thiet-bi-da-chon input[name^=SoPhieu]").val('');
                }
                $("#edit-thiet-bi-da-chon input[name=SoLuongGiam]").val(thietBiDaChon.SoLuongGiam);
                $("#edit-thiet-bi-da-chon input[name=LyDo]").val(thietBiDaChon.LyDo);
                $("#update-thiet-bi-da-chon-btn").unbind();
                $("#update-thiet-bi-da-chon-btn").click(function () {
                    UpdateThietBiDaChon(thietBiDaChon.id);
                });

                $('#edit-modal').modal('toggle');
            }
        }

        function UpdateThietBiDaChon(thietBiDaChonId) {
            var index = thietBiDaChons.findIndex(x => x.id === thietBiDaChonId);
            if (thietBiDaChons[index].PhieuGhiMatThietBiId || thietBiDaChons[index].PhieuGhiHongThietBiId) {
                toastr["success"]('Cập nhật thành công');
                $('#edit-modal').modal('toggle');
            }
            else {
                let soLuongGiam = $("#edit-thiet-bi-da-chon input[name=SoLuongGiam]").val();
                if (soLuongGiam <= thietBiDaChons[index]["SoLuongConLai"]) {
                    $("#edit-thiet-bi-da-chon").serializeArray().forEach(ele => {
                        thietBiDaChons[index][ele.name] = ele.value;
                    })
                    ReDrawThietBiDaChonTable();
                    toastr["success"]('Cập nhật thành công');
                    $('#edit-modal').modal('toggle');
                }
                else {
                    toastr["warning"]('Số lượng giảm không lớn hơn số lượng ban đầu');
                }
            }
        }

        function ReDrawThietBiDaChonTable() {
            let table = $('#thiet-bi-da-chon-table').DataTable();
            let data = [];
            thietBiDaChons.forEach(ele => {
                let item = [];
                item.push(ele["MaThietBi"] ? ele["MaThietBi"] : '');
                item.push(ele["TenThietBi"] ? ele["TenThietBi"] : '');
                item.push(ele["TenLoaiThietBi"] ? ele["TenLoaiThietBi"] : '');
                item.push(ele["TenKhoPhong"] ? ele["TenKhoPhong"] : '');
