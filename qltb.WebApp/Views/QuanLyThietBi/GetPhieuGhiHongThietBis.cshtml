        <div class="col-12">
            <div class="card card-fluid">
                <div class="card-header">
                    <form id="search-phieu-ghi-hong-bi-form">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                                <div class="form-group">
                                    <label>Tên phiếu ghi hỏng thiết bị</label>
                                    <input class="form-control" type="text" name="SoPhieu" placeholder="Số phiếu..." value="@SoPhieuQueryParam" />
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                                <div class="form-group">
                                    <label>Từ ngày</label>
                                    <input class="form-control" type="date" name="TuNgay" placeholder="dd-mm-yyyy" value="@TuNgayQueryParam" />
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                                <div class="form-group">
                                    <label>Đến ngày</label>
                                    <input class="form-control" type="date" name="DenNgay" value="@DenNgayQueryParam" />
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12" style="display: flex;align-items: flex-end;">
                                <div class="form-group">
                                    <button onclick="Search()" class="btn btn-primary">Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-body" style="overflow-x: auto">
                    <div class="table-responsive" style="min-width: 1000px">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Số phiếu</th>
                                    <th>Ngày lập</th>
                                    <th>Nội dung</th>
                                    <th>Người tạo</th>
                                    <th>Trạng thái</th>
                                    <th class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var phieuGhiHongThietBiResVM in (List<PhieuGhiHongThietBiResVM>)Model.Objects)
                                    {
                                        <tr>
                                            <td>@phieuGhiHongThietBiResVM.STT</td>
                                            <td>@phieuGhiHongThietBiResVM.SoPhieu</td>
                                            <td>@(phieuGhiHongThietBiResVM.NgayLap.HasValue ? phieuGhiHongThietBiResVM.NgayLap.Value.ToString("dd/MM/yyyy") : "")</td>
                                            <td>@phieuGhiHongThietBiResVM.NoiDung</td>
                                            <td>@phieuGhiHongThietBiResVM.HoTen</td>
                                            @if (phieuGhiHongThietBiResVM.SoLuongHongConLai == 0)
                                            {
                                                <td style="color: green">Đã sửa toàn bộ thiết bị</td>
                                            }
                                            else if (phieuGhiHongThietBiResVM.SoLuongHongConLai < phieuGhiHongThietBiResVM.SoLuongHong)
                                            {
                                                <td style="color: Highlight">Đã sửa một số thiết bị</td>
                                            }
                                            else if (phieuGhiHongThietBiResVM.SoLuongHongConLai == phieuGhiHongThietBiResVM.SoLuongHong)
                                            {
                                                <td>Chưa sửa</td>
                                            }
                                            else
                                            {
                                                <td></td>
                                            }
                                            <td>
                                                <a class="btn btn-sm btn-outline-info" href="/quan-ly-thiet-bi/thong-tin-phieu-ghi-hong-thiet-bi?phieuGhiHongThietBiId=@(phieuGhiHongThietBiResVM.PhieuGhiHongThietBiId)"><i class="fas fa-pencil"></i></a>
                                                <button class="btn btn-sm btn-outline-danger" onclick="Delete('@(phieuGhiHongThietBiResVM.PhieuGhiHongThietBiId)')"><i class="fas fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <ul class="pagination justify-content-center mt-4">
                            @{
                                foreach (var paginationResVM in (List<PaginationResVM>)Model.Paginations)
                                {
                                    <li class="page-item @(paginationResVM.IsActived.Value ? "active":  "") @(paginationResVM.IsDisabled.Value ? "disabled":  "")">
                                        <a class="page-link" href="/quan-ly-thiet-bi/phieu-ghi-hong-thiet-bi@(paginationResVM.Url)" tabindex="-1">@Html.Raw(paginationResVM.Text)</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/javascript/hanhnd_1.js"></script>
    <script>
        function Delete(PhieuGhiHongThietBiId) {
            $('#delete-modal').modal('show');
            $("#delete-phieu-ghi-hong-thiet-bi-btn").click(function () {
                DeletePhieuGhiHongBi(PhieuGhiHongThietBiId);
            });
        }

        function DeletePhieuGhiHongBi(PhieuGhiHongThietBiId) {
            $.ajax({
                url: "/quan-ly-thiet-bi/xoa-thong-tin-phieu-ghi-hong-thiet-bi",
                data: {
                    PhieuGhiHongThietBiId: PhieuGhiHongThietBiId
                },
                type: "post",
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                }
            });
        }

        function Search() {
            let queryParams = $('#search-phieu-ghi-hong-bi-form').serialize();
            location.replace("/quan-ly-thiet-bi/danh-sach-phieu-ghi-hong-thiet-bi?" + queryParams);
        }

        $(document).ready(function () {
            if ('@(SuccessNotification)') {
                toastr["success"]('@(SuccessNotification)')
            }
            else if ('@(WarningNotification)') {
                toastr["warning"]('@(WarningNotification)')
            }

            $("#search-phieu-ghi-hong-bi-form").submit(function (e) {
                e.preventDefault();
            })
        })
    </script>
}