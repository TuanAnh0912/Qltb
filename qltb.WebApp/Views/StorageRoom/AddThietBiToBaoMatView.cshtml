@model List<qltb.WebApp.Models.StorageRoomViewModel.BaoMatThietBiChiTietModel>
@{
    Layout = null;
}

@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
<tr>
    <td>
        <input hidden name="ThietBiId" value="@item.ThietBiId" />
        @item.MaThietBi
    </td>
    <td>@item.TenThietBi</td>
    <td>@item.SoLuong</td>
    <td><input type="number" name="SoLuongMat" value="@item.SoLuongMat" max="@item.SoLuong" /></td>
    <td><a href="#" onclick="RemoveThietBiMat(this)">Xóa</a></td>
</tr>
    }
}

