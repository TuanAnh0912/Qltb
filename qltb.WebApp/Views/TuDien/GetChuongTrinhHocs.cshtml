        <div class="col-12">
            <div class="card card-fluid">
                <div class="card-header">
                    <form id="search-chuong-trinh-hoc-form">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="TenChuongTrinhHoc" placeholder="Tên chương trình học..." value="@TenChuongTrinhHocQueryParam" />
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-4 col-12">
                                <div class="form-group">
                                    <button onclick="Search()" class="btn btn-primary">Tìm kiếm</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-body" style="overflow-x: auto">
                    <div class="table-responsive" style="min-width: 1000px">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Mã chương trình học</th>
                                    <th>Tên chương trình học</th>
                                    <th class="text-center"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var chuongTrinhHocResVM in (List<ChuongTrinhHocResVM>)Model.Objects)
                                    {
                                        <tr>
                                            <td>@chuongTrinhHocResVM.STT</td>
                                            <td><code>@chuongTrinhHocResVM.MaChuongTrinhHoc</code></td>
                                            <td>@chuongTrinhHocResVM.TenChuongTrinhHoc</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-info" onclick="Edit('@(chuongTrinhHocResVM.ChuongTrinhHocId)')"><i class="fas fa-pencil"></i></button>
                                                <button class="btn btn-sm btn-outline-danger" onclick="Delete('@(chuongTrinhHocResVM.ChuongTrinhHocId)')"><i class="fas fa-trash-alt"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <ul class="pagination justify-content-center mt-4">
                            @{
                                foreach (var paginationResVM in (List<PaginationResVM>)Model.Paginations)
                                {
                                    <li class="page-item @(paginationResVM.IsActived.Value ? "active":  "") @(paginationResVM.IsDisabled.Value ? "disabled":  "")">
                                        <a class="page-link" href="/tu-dien/chuong-trinh-hoc@(paginationResVM.Url)" tabindex="-1">@Html.Raw(paginationResVM.Text)</a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/javascript/hanhnd_1.js"></script>
    <script>
        function Add() {
            $('#add-modal').modal('show');
            $('#add-chuong-trinh-hoc-form input[name=MaChuongTrinhHoc]').val('');
            $('#add-chuong-trinh-hoc-form input[name=TenChuongTrinhHoc]').val('');
            $("#add-chuong-trinh-hoc-btn").click(function () {
                AddLoaiThietBi();
            });
        }

        function Edit(chuongTrinhHocId) {
            $.ajax({
                url: "/tu-dien/thong-tin-chuong-trinh-hoc",
                data: {
                    chuongTrinhHocId: chuongTrinhHocId
                },
                type: "get",
                success: function (response) {
                    if (response) {
                        setTimeout(function () {
                            $('#edit-modal').modal('show');
                            $('#editModalLabel').html(response.TenChuongTrinhHoc)
                            $('#edit-chuong-trinh-hoc-form input[name=MaChuongTrinhHoc]').val(response.MaChuongTrinhHoc);
                            $('#edit-chuong-trinh-hoc-form input[name=TenChuongTrinhHoc]').val(response.TenChuongTrinhHoc);
                            $("#update-chuong-trinh-hoc-btn").unbind();
                            $("#update-chuong-trinh-hoc-btn").click(function () {
                                UpdateLoaiThietBi(response.ChuongTrinhHocId);
                            });
                        }, 500);
                    }
                    else {
                        setTimeout(function () { toastr["warning"]('Không tìm thấy dữ liệu') }, 500)
                    }

                },
                error: function (xhr) {
                }
            });
        }

        function Delete(chuongTrinhHocId) {
            $('#delete-modal').modal('show');
            $("#delete-chuong-trinh-hoc-btn").unbind();
            $("#delete-chuong-trinh-hoc-btn").click(function () {
                DeleteLoaiThietBi(chuongTrinhHocId);
            });
        }

        function DeleteLoaiThietBi(chuongTrinhHocId) {
            console.log(chuongTrinhHocId)
            $.ajax({
                url: "/tu-dien/xoa-thong-tin-chuong-trinh-hoc",
                data: {
                    ChuongTrinhHocId: chuongTrinhHocId
                },
                type: "post",
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                }
            });
        }

        function UpdateLoaiThietBi(chuongTrinhHocId) {
            let data = {
                ChuongTrinhHocId: chuongTrinhHocId
            }
            $('#edit-chuong-trinh-hoc-form').serializeArray().forEach(ele => {
                data[ele.name] = ele.value
            })

            $.ajax({
                url: "/tu-dien/cap-nhat-thong-tin-chuong-trinh-hoc",
                data: data,
                type: "post",
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                }
            });
        }

        function AddLoaiThietBi() {
            let data = {}
            $('#add-chuong-trinh-hoc-form').serializeArray().forEach(ele => {
                data[ele.name] = ele.value
            })

            $.ajax({
                url: "/tu-dien/them-thong-tin-chuong-trinh-hoc",
                data: data,
                type: "post",
                success: function (response) {
                    location.reload();
                },
                error: function (xhr) {
                }
            });
        }

        function Search() {
            let queryParams = $('#search-chuong-trinh-hoc-form').serialize();
            console.log(queryParams);
            location.replace("/tu-dien/chuong-trinh-hoc?" + queryParams);
        }

        $(document).ready(function () {
            if ('@(SuccessNotification)') {
                toastr["success"]('@(SuccessNotification)')
            }
            else if ('@(WarningNotification)') {
                toastr["warning"]('@(WarningNotification)')
            }

            $("#search-chuong-trinh-hoc-form").submit(function (e) {
                e.preventDefault();
            })
        })
    </script>
}
