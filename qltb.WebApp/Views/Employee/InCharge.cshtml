<form id="incharger_delete_form" action="/Employee/Delete" method="post">
    <div id="incharger_delete_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <!-- .modal-dialog -->
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <!-- .modal-content -->
            <div class="modal-content">
                <!-- .modal-header -->
                <div class="modal-header">
                    <h5 class="modal-title"> Hủy bỏ nhân viên phụ trách</h5>
                </div><!-- /.modal-header -->
                <!-- .modal-body -->
                <div class="modal-body">
                    <input id="incharger_id_delete" hidden />
                    <p>Xóa thông tin cán bộ <b id="incharger_to_delete"></b> khỏi hệ thống</p>
                </div><!-- /.modal-body -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-subtle-secondary" data-dismiss="modal"><i class="fal fa-arrow-left mr-2"></i>Quay lại</button>
                    <button type="submit" class="btn btn-subtle-success" id="incharger_delete_btn"><i class="fal fa-check mr-2"></i>Xác nhận</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
<script>
    $(function () {
        $("#thoigianquanly").flatpickr({
            dateFormat: "d/m/Y",
            altFormat: "d/m/Y"
        });
        $("#thoigianquanly_update").flatpickr({
            dateFormat: "d/m/Y",
            altFormat: "d/m/Y"
        });
        $("#incharger-table").DataTable();
        $(".dataTables_length select").css("width", "55");
        $(".role_select").selectize({
            create: 0,
            placeholder: "Chọn vai trò",
            dropdownParent: "body"
        })
        $(".teacher_select").selectize({
            create: 0,
            placeholder: "Chọn Giáo  viên",
            dropdownParent: "body"
        })
    })
    $("#incharger_insert_form").submit(function (event) {
        var form = $(this);
        $.ajax({
            type: "Post",
            url: form.attr('action'),
            data: form.serialize(),
            dataType: 'html',
            beforeSend: function () {
                $("#incharger_insert_btn").attr("disabled", "disabled");
            },
            success: function (response) {
                var data = JSON.parse(response);
                if (data.status == true) {
                    toastr.success(data.messages, 'Thành công!');
                }
                if (data.status == false) {
                    toastr.error(data.messages, 'Không thành công.');
                }
            },
            complete: function () {
                $("#incharger_insert_btn").removeAttr("disabled");
                $("#incharger_insert_modal").modal("hide");
                setTimeout(function () { window.location.reload() }, 2000);
            }
        });
        event.preventDefault();
    });
    $(".incharger_update").click(function () {
        var incharger_id = $(this).data('id');
        $.get("/Employee/GetCanBoThietBi", { incharger_id: incharger_id }, function (data) {
            console.log(data);
            $("#incharger_id_update").val(data.CanBoThietBiId);
            $("#description_update").val(data.GhiChu);
            $("#incharger_level_update").val(data.TrinhDoVanHoa);
            $("#role_select_update").selectize()[0].selectize.setValue(data.VaiTroCanBoId);
            $("#teacher_select_update").selectize()[0].selectize.setValue(data.GiaoVienId);
            $("#thoigianquanly_update").val(data.ThoiGianBatDauQuanLy + " to " + data.ThoiGianHetHanQuanLy);
            if (data.CoTrinhDoNghiepVu == true) {
                $("#rd1_update").prop("checked", true);
            }
            if (data.CoTrinhDoNghiepVu == false) {
                $("#rd2_update").prop("checked", true);
            }
        });
    })
    $("#incharger_update_form").submit(function (event) {
        var form = $(this);
        $.ajax({
            type: "Post",
            url: form.attr('action'),
            data: form.serialize(),
            dataType: 'html',
            beforeSend: function () {
                $("#incharger_update_btn").attr("disabled", "disabled");
            },
            success: function (response) {
                var data = JSON.parse(response);
                if (data.status == true) {
                    toastr.success(data.messages, 'Thành công!');
                }
                if (data.status == false) {
                    toastr.error(data.messages, 'Không thành công.');
                }
            },
            complete: function () {
                $("#incharger_update_btn").removeAttr("disabled");
                $("#incharger_update_modal").modal("hide");
                setTimeout(function () { window.location.reload() }, 2000);
            }
        });
        event.preventDefault();
    });

    $(".incharger_delete").click(function () {
        var incharger_id = $(this).data('id');
        var incharger_name = $(this).data('name');
        $("#incharger_id_delete").val(incharger_id);
        $("#incharger_to_delete").text(incharger_name);
    })
    $("#incharger_delete_form").submit(function (event) {
        var form = $(this);
        var incharger_id = $("#incharger_id_delete").val();
        if (incharger_id == null) {
            return false;
        }
        $.ajax({
            type: "Post",
            url: form.attr('action'),
            data: { incharger_id: incharger_id },
            dataType: 'html',
            beforeSend: function () {
                $("#incharger_delete_btn").attr("disabled", "disabled");
            },
            success: function (response) {
                var data = JSON.parse(response);
                if (data.status == true) {
                    toastr.success(data.messages, 'Thành công! ');
                }
                if (data.status == false) {
                    toastr.error(data.messages, 'Không thành công. ');
                }
            },
            complete: function () {
                $("#incharger_delete_btn").removeAttr("disabled");
                $("#incharger_delete_modal").modal("hide");
                setTimeout(function () { window.location.reload() }, 2000);
            }
        });
        event.preventDefault();
    });

</script>
